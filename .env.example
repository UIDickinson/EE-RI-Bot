# LLM Provider Configuration
# Options: anthropic, openai, openrouter
LLM_PROVIDER=anthropic

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929

# OpenAI
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4o

# OpenRouter
OPENROUTER_API_KEY=your_openrouter_key_here
OPENROUTER_MODEL=anthropic/claude-sonnet-4.5

# Research APIs (Optional)
IEEE_API_KEY=your_ieee_key_here
GOOGLE_PATENTS_KEY=your_patents_key_here

# Neo4j (Optional)
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Distributor APIs (Optional)
DIGIKEY_API_KEY=your_digikey_key_here
MOUSER_API_KEY=your_mouser_key_here
OCTOPART_API_KEY=your_octopart_key_here

# Server
PORT=8000
HOST=0.0.0.0